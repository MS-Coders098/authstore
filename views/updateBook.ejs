<% include ./partials/header.ejs %>

<div class="flex h-screen min-h-full flex-col px-6 py-12 items-center bg-zinc-600 justify-center lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class=" text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Update Your Existing Book</h2>
  </div>

  <div class="mt-7 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" action="" method="post">
      <div>
        <label for="title" class="block text-xl font-medium leading-6 text-gray-900">Title</label>
        <div class="mt-2">
          <input id="title" value="<%= previousDetails.title %>" name="title" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset px-2 ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="author" class="block text-xl font-medium leading-6 text-gray-900">Author</label>
        <div class="mt-2">
          <input id="author" name="author" value="<%= previousDetails.author %>" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 px-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="genre" class="block text-xl font-medium leading-6 text-gray-900">Genre</label>
        <div class="mt-2">
          <input id="genre" name="genre" type="text" value="<%= previousDetails.genre %>" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 px-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <label for="description" class="block text-xl font-medium leading-6 text-gray-900">Description</label>
        <div class="mt-2">
          <textarea name="description" id="description" cols="30" rows="5" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 px-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"> <%= previousDetails.description %> </textarea>
        </div>
      </div>

      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save Changes</button>
      </div>
    </form>

  </div>
</div>


<% include ./partials/footer.ejs %>